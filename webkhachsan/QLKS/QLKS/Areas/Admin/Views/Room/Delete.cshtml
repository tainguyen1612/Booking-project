@model QLKS.Models.tblPhong

@{
    ViewBag.Title = "Delete room";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Are you sure you want to delete this?
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Room number")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.so_phong)
                </dd>

                <dt>
                    @Html.DisplayName("Type of Room")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tblLoaiPhong.mo_ta)
                </dd>

                <dt>
                    @Html.DisplayName("Floor")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tblTang.ten_tang)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
        </div>
    </div>

