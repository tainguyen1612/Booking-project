}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<div>
    <dl class="dl-horizontal">
        <dt>
            Account
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ma_kh)
        </dd>

        <dt>
            Name
        </dt>

