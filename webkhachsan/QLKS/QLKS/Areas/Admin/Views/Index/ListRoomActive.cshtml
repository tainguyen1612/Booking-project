
@{
    ViewBag.Title = "Check out";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}
@using QLKS.Models
@model List<tblHoaDon>

<!-- SSS -->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> List rooms being in use
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <!-- /SSS -->
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type of Room</th>
                        <th>Floor</th>
                        <th>Day in</th>
                        <th>Day out</th>
                        <th>Status</th>
                        <th>Option</th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@item.tblPhieuDatPhong.tblPhong.so_phong</td>
                        <td>@item.tblPhieuDatPhong.tblPhong.tblLoaiPhong.mo_ta</td>
                        <td>@item.tblPhieuDatPhong.tblPhong.tblTang.ten_tang</td>
                        <td>@item.tblPhieuDatPhong.ngay_vao.Value.ToShortDateString()</td>
                        <td>@item.tblPhieuDatPhong.ngay_ra.Value.ToShortDateString()</td>
                        <td><span class="badge badge-danger badge-g">@item.tblPhieuDatPhong.tblPhong.tblTinhTrangPhong.mo_ta</span></td>
                        <td>
                            <a href="@Url.Action("Payment","Bill",new { id = item.ma_hd})"><div class="btn btn-danger badge-g">Payment</div></a>
                            <a href="@Url.Action("RoomRenewal","Bill",new { id = item.ma_hd})"><div class="btn btn-info badge-g">Room renewal</div></a>
                            <a href="@Url.Action("ChangeRoom","Bill",new { id = item.ma_hd})"><div class="btn btn-secondary badge-g">Change room</div></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at ... PM</div>
</div>